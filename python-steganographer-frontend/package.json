    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:coverage:open": "jest --coverage && start coverage/lcov-report/index.html"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
